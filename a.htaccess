RewriteEngine On

# Exceção para a URL /administrativo/reuniao
RewriteRule ^administrativo/reuniao$ /administrativo/index.php [L]
RewriteRule ^Pusher Channels$ /Pusher Channels/ [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Garantir que arquivos estáticos na raiz sejam servidos corretamente
RewriteCond %{REQUEST_URI} ^/index\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ [NC]
RewriteRule . - [L]